</div>

{{!-- Enhanced Scripts --}}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Modal functionality
    const modal = document.getElementById('inquiry-modal');
    const modalButtons = document.querySelectorAll('[data-modal="inquiry"]');
    const modalClose = document.querySelector('.modal-close');
    const modalBackdrop = document.querySelector('.modal-backdrop');
    
    modalButtons.forEach(button => {
        button.addEventListener('click', function() {
            const aircraft = this.getAttribute('data-aircraft');
            modal.querySelector('[data-aircraft]').setAttribute('data-aircraft', aircraft);
            modal.querySelector('.modal-title').textContent = `Request Information - ${aircraft}`;
            modal.setAttribute('aria-hidden', 'false');
            modal.classList.add('is-open');
            document.body.style.overflow = 'hidden';
        });
    });
    
    [modalClose, modalBackdrop].forEach(element => {
        element.addEventListener('click', function() {
            modal.setAttribute('aria-hidden', 'true');
            modal.classList.remove('is-open');
            document.body.style.overflow = '';
        });
    });
    
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        });
    });
    
    // Initialize AOS (Animate on Scroll)
    if (typeof AOS !== 'undefined') {
        AOS.init({
            duration: 800,
            once: true,
            offset: 100
        });
    }
});
</script>