{{!-- Featured Aircraft Section --}}
<section class="featured-aircraft">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Featured Aircraft</h2>
            <p class="section-subtitle">Handpicked opportunities representing exceptional value</p>
        </div>
        
        <div class="aircraft-grid">
            {{#get "posts" include="tags" filter="featured:true+tag:aircraft" limit="6" as |aircraft|}}
                {{#foreach aircraft}}
                    <article class="aircraft-card" data-aos="fade-up" data-aos-delay="{{@index}}00">
                        <div class="aircraft-card-header">
                            {{#if feature_image}}
                                <div class="aircraft-image">
                                    <img src="{{img_url feature_image size="m"}}" 
                                         srcset="{{img_url feature_image size="s"}} 300w,
                                                 {{img_url feature_image size="m"}} 600w,
                                                 {{img_url feature_image size="l"}} 1200w"
                                         sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
                                         alt="{{title}}"
                                         loading="lazy">
                                    <div class="aircraft-badge new">New Listing</div>
                                    <button class="favorite-btn" aria-label="Save to favorites">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                                        </svg>
                                    </button>
                                </div>
                            {{/if}}
                        </div>
                        
                        <div class="aircraft-card-body">
                            <h3 class="aircraft-title">
                                <a href="{{url}}">{{title}}</a>
                            </h3>
                            
                            {{!-- Extract custom fields from content --}}
                            <div class="aircraft-price">{{custom_excerpt}}</div>
                            
                            <div class="aircraft-specs">
                                <div class="spec">
                                    <span class="spec-label">Year</span>
                                    <span class="spec-value">2020</span>
                                </div>
                                <div class="spec">
                                    <span class="spec-label">Total Time</span>
                                    <span class="spec-value">847 hrs</span>
                                </div>
                                <div class="spec">
                                    <span class="spec-label">Passengers</span>
                                    <span class="spec-value">14</span>
                                </div>
                                <div class="spec">
                                    <span class="spec-label">Range</span>
                                    <span class="spec-value">7,500 nm</span>
                                </div>
                            </div>
                            
                            <div class="aircraft-actions">
                                <a href="{{url}}" class="btn btn-primary">View Details</a>
                                <button class="btn btn-outline" data-modal="inquiry" data-aircraft="{{title}}">Request Info</button>
                            </div>
                        </div>
                    </article>
                {{/foreach}}
            {{else}}
                {{!-- Fallback content if no featured aircraft --}}
                <div class="no-aircraft-message">
                    <p>New inventory coming soon. <a href="/contact/">Contact us</a> for off-market opportunities.</p>
                </div>
            {{/get}}
        </div>
        
        <div class="section-cta">
            <a href="/inventory/" class="btn btn-outline btn-large">View All Aircraft</a>
        </div>
    </div>
</section>

